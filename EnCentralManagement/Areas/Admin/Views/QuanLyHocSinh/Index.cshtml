@using EnCentralManagement.Areas.Admin.Models;
@model IEnumerable<EnCentralManagement.Areas.Admin.Models.HOC_SINH>
@{
 
      ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutMain.cshtml";

}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35"></h3>
        <div class="table-data__tool">

            <div class="table-data__tool-right">
                <a href="@Url.Action("ThemHocSinh", "QuanLyHocSinh")" class="au-btn au-btn-icon au-btn--green au-btn--small">
                    <i class="zmdi zmdi-plus"></i>Thêm học sinh
                </a>
            </div>
        </div>
        <div>
            <div class="table-responsive table-responsive-data2">
                <table class="table table-data2">
                    <thead>
                        <tr>
                            <th>
                                <label class="au-checkbox">
                                    <input type="checkbox">
                                    <span class="au-checkmark"></span>
                                </label>
                            </th>
                            <th>stt</th>
                            <th>avatar</th>
                            <th>họ và tên</th>
                            <th>ngày sinh</th>
                            <th>giới tính</th>

                            <th>sđt</th>
                            <th>địa chỉ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                                var n = 0;
                        foreach (HOC_SINH hs in Model)
                                {
                        <tr class="tr-shadow" id= "@(hs.ID)">
                            <td>
                                <label class="au-checkbox">
                                    <input type="checkbox">
                                    <span class="au-checkmark"></span>
                                </label>
                            </td>
                            <td>@(++n)</td>
                            <td>
                                <img src="/Assets/images/icon/avatar-06.jpg" width="40" height="40" />
                            </td>
                            <td>@(hs.HO_TEN)</td>
                            <td>@(hs.NGAY_SINH)</td>
                            <td>
                                @(hs.GIOI_TINH)
                            </td>

                            <td>@(hs.SO_DIENTHOAI)</td>
                            <td>@(hs.DIA_CHI)</td>
                            <td>
                                <div class="table-data-feature">
                                    <a href="@Url.Action("XemThongTinHocSinh", "QuanLyHocSinh", new { id = hs.ID.ToString()  })" class="item" data-toggle="tooltip" data-placement="top" title="Xem chi tiết">
                                        <i class="zmdi zmdi-view-web"></i>
                                    </a>
                                    <a href="@Url.Action("SuaHocSinh", "QuanLyHocSinh", new { id = hs.ID.ToString() } )" class="item" data-toggle="tooltip" data-placement="top" title="Sửa">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <button onclick="ConfirmToDelete()" class="item" data-toggle="tooltip" data-placement="top" title="Xoá">
                                        <i class="zmdi zmdi-delete"></i>
                                        <script>
                                            function ConfirmToDelete() {
                                confirm("Bạn có chắc chắn muốn xoá không?");
                            }
                                        </script>
                                    </button>

                                </div>
                            </td>
                        </tr>
                            }
                        }
                        

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>
        function getID(){

        }
    </script>
</div>
