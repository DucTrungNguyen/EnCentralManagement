
@using EnCentralManagement.Areas.Admin.Models;
@model IEnumerable<EnCentralManagement.Areas.Admin.Models.PHU_HUYNH>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35"></h3>
        <div class="table-data__tool">

            <div class="table-data__tool-right">
                <a href="@Url.Action("ThemPhuHuynh", "QuanLyPhuHuynh")" class="au-btn au-btn-icon au-btn--green au-btn--small">
                    <i class="zmdi zmdi-plus"></i>Thêm phụ huynh
                </a>

            </div>
        </div>
        <div>
            <div class="table-responsive table-responsive-data2">
                <table class="table table-data2">
                    <thead>
                        <tr>
                            <th>
                                <label class="au-checkbox">
                                    <input type="checkbox">
                                    <span class="au-checkmark"></span>
                                </label>
                            </th>
                            <th>stt</th>
                            <th>avatar</th>
                            <th>họ và tên</th>
                            <th>ngày sinh</th>
                            <th>giới tính</th>

                            <th>sđt</th>
                            <th>địa chỉ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var n = 0;
                            foreach (PHU_HUYNH ph in Model)
                            {
                                <tr class="tr-shadow">
                                    <td>
                                        <label class="au-checkbox">
                                            <input type="checkbox">
                                            <span class="au-checkmark"></span>
                                        </label>
                                    </td>
                                    <td>@(++n)</td>
                                    <td>
                                        <img src="/Assets/images/icon/avatar-06.jpg" width="40" height="40" />
                                    </td>
                                    <td>@(ph.HO_TEN)</td>
                                    <td>@(ph.NGAY_SINH.ToString().Split(' ')[0])</td>
                                    <td>
                                        Nam
                                    </td>

                                    <td>@(ph.SO_DIENTHOAI)</td>
                                    <td>@(ph.DIA_CHI)</td>
                                    <td>
                                        <div class="table-data-feature">
                                            <a href="@Url.Action("XemThongTinPhuHuynh", "QuanLyPhuHuynh", new { id = ph.ID.ToString() })" class="item" data-toggle="tooltip" data-placement="top" title="Xem chi tiết">
                                                <i class="zmdi zmdi-view-web"></i>
                                            </a>
                                            <a href="@Url.Action("ThemPhuHuynh", "QuanLyPhuHuynh", new { id = ph.ID.ToString() })" class="item" data-toggle="tooltip" data-placement="top" title="Sửa">
                                                <i class="zmdi zmdi-edit"></i>
                                            </a>
                                            <button data-href='@(Url.Action("XoaPhuHuynh", "QuanLyPhuHuynh", 
                                                              new { id = ph.ID.ToString()}))' class="item btn-delete" data-toggle="tooltip" data-placement="top" title="Xoá">
                                                <i class="zmdi zmdi-delete"></i>
                                                
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }


                        }

                    </tbody>
                </table>
            </div>
        </div>
        <script>
            $(".btn-delete").click(function () {
                let isConfirm = confirm("Bạn có chắc chắn muốn xoá không?");
                console.log(isConfirm)
                // if (isConfirm == true) {
                if (isConfirm) {
                    var action = $(this).attr("data-href");// lay duong dan web chay den khi an xac nhan thanh cong
                    location.href = action;
                }
            });
        </script>
    </div>
    
</div>